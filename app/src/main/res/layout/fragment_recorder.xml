<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Recorder">

    <Button
        android:id="@+id/button_start_recording"
        android:layout_width="368dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="350dp"
        android:layout_marginBottom="584dp"
        android:text="Start Recording"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_stop_recording"
        android:layout_width="322dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="400dp"
        android:layout_marginBottom="584dp"
        android:text="Stop Recording"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_start_recording" />

    <Button
        android:id="@+id/button_playback_start"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="232dp"
        android:text="Start playing file"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_playback_stop"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="450dp"
        android:layout_marginBottom="232dp"
        android:text="Stop playing file"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_playback_start" />
</FrameLayout>